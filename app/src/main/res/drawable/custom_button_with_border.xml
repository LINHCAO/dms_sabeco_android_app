<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#C2A2D2FB" android:startColor="#C26AB9E9" />

            <stroke android:width="1px" android:color="#CCBCBCBC" />

            <corners android:radius="1dp" />
        </shape></item>
    <item android:state_selected="true"><shape>
            <gradient android:angle="270" android:endColor="#CCC8C8C8" android:startColor="#CCC8C8C8" />

            <stroke android:width="1px" android:color="#CCBCBCBC" />

            <corners android:radius="1dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#CCFFFFFF" android:startColor="#CCFFFFFF" />

            <stroke android:width="1px" android:color="#CCBCBCBC" />

            <corners android:radius="1dp" />
        </shape></item>

</selector>