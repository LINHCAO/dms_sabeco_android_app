<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TABLE_BG"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tvNum"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:tag="@string/TEXT_STT"
        android:text="@string/TEXT_STT" />

    <TextView
        android:id="@+id/tvCusCode"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:tag="@string/TEXT_TB_CUSTOMER_CODE"
        android:text="@string/TEXT_TB_CUSTOMER_CODE"
        android:textColor="@color/COLOR_USER_NAME" />

    <TextView
        android:id="@+id/tvCusName"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical|left"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:tag="@string/TEXT_ORDER_CUSTOMER"
        android:text="@string/TEXT_ORDER_CUSTOMER" />

    <TextView
        android:id="@+id/tvAdd"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical|left"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:tag="@string/TEXT_ADDRESS"
        android:text="@string/TEXT_ADDRESS" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextViewVinamilkTable"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:padding="@dimen/padding"
                android:tag="@string/TEXT_C2_ACTION"
                android:text="@string/TEXT_C2_ACTION"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:tag="" >

            <LinearLayout
                android:id="@+id/llInputPurchase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/style_row_default"
                android:duplicateParentState="true"
                android:minHeight="@dimen/min_height_of_row" >

                <ImageView
                    android:id="@+id/ivInputPurchase"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_row_default"
                    android:contentDescription="@string/TEXT_VISITING"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/min_height_of_row"
                    android:scaleType="center"
                    android:src="@drawable/icon_import"
                    android:tag="@string/TEXT_PURCHASE" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInputOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/style_row_default"
                android:duplicateParentState="true"
                android:minHeight="@dimen/min_height_of_row" >

                <ImageView
                    android:id="@+id/ivInputOrder"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_row_default"
                    android:contentDescription="@string/TEXT_VISITING"
                    android:duplicateParentState="true"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/min_height_of_row"
                    android:scaleType="center"
                    android:src="@drawable/icon_export"
                    android:tag="@string/TEXT_SALE" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>