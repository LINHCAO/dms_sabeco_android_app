<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/TABLE_BG" >

    <TextView
        android:id="@+id/tvSTT"
        style="@style/TextViewVinamilkTable"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="5dp"
        android:text="@string/TEXT_STT" />

    <TextView
        android:id="@+id/tvCustomerCode"
        style="@style/TextViewVinamilkTable"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="" />

    <TextView
        android:id="@+id/tvCustomerName"
        style="@style/TextViewVinamilkTable"
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:gravity="center|left"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="5dp"
        android:text="" />

    <TextView
        android:id="@+id/tvCustomerAdd"
        style="@style/TextViewVinamilkTable"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:gravity="center|left"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="5dp"
        android:text="" />

    <TextView
        android:id="@+id/tvDebt"
        style="@style/TextViewVinamilkTable"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:gravity="center|right"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="5dp"
        android:text="" />

    <TextView
        android:id="@+id/tvDayNumber"
        style="@style/TextViewVinamilkTable"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="5dp"
        android:text="" />

    <LinearLayout android:id="@+id/llIconDetail"
        android:layout_width="70dp"
        android:layout_margin="1dp"
        android:background="@drawable/style_row_default"
        android:duplicateParentState="true"
        android:minHeight="@dimen/min_height_of_row" >

        <ImageView
            android:contentDescription="@string/TEXT_IMAGE_INFO"
            android:id="@+id/ivDetail"
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/style_row_default"
            android:duplicateParentState="true"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="@dimen/min_height_of_row"
            android:src="@drawable/icon_list" />
    </LinearLayout>
</TableRow>