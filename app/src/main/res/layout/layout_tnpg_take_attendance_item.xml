<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <!-- dia chi -->

        <TableRow android:layout_marginTop="@dimen/spacing_between_rows" >

            <TextView
                android:layout_width="180dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_right"
                android:text="@string/TEXT_CODE_STAFF"
                android:textColor="@color/BLACK" >
            </TextView>

            <TextView
                android:id="@+id/tvStaffCode"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingRight="@dimen/padding_right"
                android:textColor="@color/COLOR_LINK" >
            </TextView>
        </TableRow>

        <!-- dien thoai -->

        <TableRow android:layout_marginTop="@dimen/spacing_between_rows" >

            <TextView
                android:layout_width="180dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_right"
                android:text="@string/TEXT_NAME_STAFF"
                android:textColor="@color/BLACK" >
            </TextView>

            <TextView
                android:id="@+id/tvStaffName"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingRight="@dimen/padding_right"
                android:textColor="@color/BLACK"
                android:textStyle="bold" >
            </TextView>
        </TableRow>

        <!-- di dong -->

        <TableRow android:layout_marginTop="@dimen/spacing_between_rows" >

            <TextView
                android:layout_width="180dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_right"
                android:text="@string/TEXT_ON_WORK"
                android:textColor="@color/BLACK" >
            </TextView>

            <CheckBox
                android:id="@+id/cbOnWork"
                style="@style/VNMCheckBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/BLACK" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/spacing_between_rows" >

            <TextView
                android:layout_width="180dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_right"
                android:text="@string/TEXT_DRESS"
                android:textColor="@color/BLACK" >
            </TextView>

            <CheckBox
                android:id="@+id/cbDress"
                style="@style/VNMCheckBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/BLACK" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/spacing_between_rows" >

            <TextView
                android:layout_width="180dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_right"
                android:text="@string/TEXT_FOLLOW_RULE"
                android:textColor="@color/BLACK" >
            </TextView>

            <CheckBox
                android:id="@+id/cbFollowRule"
                style="@style/VNMCheckBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/BLACK" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:text="@string/TEXT_TIME_ON_WORK"
            android:textColor="@color/BLACK" >
        </TextView>

        <TimePicker
            android:id="@+id/tpTimeOnWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8" />
    </LinearLayout>

</LinearLayout>