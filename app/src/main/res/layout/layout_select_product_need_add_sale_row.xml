<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/TABLE_BG" >

    <TextView
        android:id="@+id/tvSTT"
        style="@style/TextViewVinamilkTable"
        android:layout_width="45dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:text="@string/TEXT_STT"
        android:textColor="@color/BLACK" />

    <LinearLayout
        android:id="@+id/llProductCode"
        style="@style/TextViewVinamilkTable"
        android:layout_width="130dp"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/min_height_of_row"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvProductCode"
            style="@style/TextViewVinamilkTable"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:minHeight="@dimen/min_height_of_row"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="2dp"
            android:paddingTop="@dimen/padding_top"
            android:text="@string/TEXT_COLUM_ORDER_CODE"
            android:textColor="@color/BLACK" />

        <TextView
            android:id="@+id/tvGSNPP"
            style="@style/TextViewVinamilkTable"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="top"
            android:minHeight="@dimen/min_height_of_row"
            android:paddingTop="2dp"
            android:text="*,GS"
            android:textColor="@color/RED"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvProductName"
        style="@style/TextViewVinamilkTable"
        android:layout_width="340dp"
        android:layout_height="fill_parent"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:text="@string/TEXT_COLUM_ORDER_NAME"
        android:textColor="@color/BLACK" />

    <TextView
        android:id="@+id/tvPrice"
        style="@style/TextViewVinamilkTable"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:gravity="right|center_vertical"
        android:maxLines="2"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:text="@string/TEXT_COLUM_PRICE"
        android:textColor="@color/BLACK" />

    <LinearLayout
        android:id="@+id/llCTKM"
        style="@style/TextViewVinamilkTable"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:minHeight="@dimen/min_height_of_row"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivPromotion"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/TEXT_IMAGE_INFO"
            android:padding="1dp"
            android:scaleType="center"
            android:src="@drawable/icon_check" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCheckBoxSelect"
        style="@style/TextViewVinamilkTable"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/cbSelected"
            style="@style/VNMCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/margin_right"
            android:paddingRight="0dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNotifyNull"
        style="@style/TextViewVinamilkTable"
        android:layout_width="763dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:textColor="@color/BLACK"
        android:visibility="gone" />

</TableRow>