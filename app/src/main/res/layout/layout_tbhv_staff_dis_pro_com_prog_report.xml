<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/BG_FRAGMENT"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_content_fragment"
        android:paddingLeft="@dimen/padding_content_fragment"
        android:paddingRight="@dimen/padding_content_fragment" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@drawable/bg_header_info"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
<!--             <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dip"
	            android:baselineAligned="false"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" > -->
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="@dimen/margin_right"
	                android:text="@string/TEXT_LABLE_NPP"
	                android:textColor="@color/BLACK" />
	            <TextView
	                android:id="@+id/tvCodeNPP"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="10dip"
	                android:text="VP40071"
	                android:textColor="@color/BLACK"
	                android:textStyle="bold" />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="@dimen/margin_right"
	                android:text="@string/TEXT_LABLE_GSNPP"
	                android:textColor="@color/BLACK" />
	
	            <Spinner
	                android:id="@+id/spCodeGSNPP"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="20dip"
	                android:layout_weight="3.5"
	                android:background="@drawable/spinner_selector"
	                android:drawSelectorOnTop="true"
	                android:paddingBottom="@dimen/padding_bottom"
	                android:paddingLeft="@dimen/padding_left"
	                android:paddingRight="@dimen/padding_right"
	                android:paddingTop="@dimen/padding_top"
	                android:prompt="@string/TEXT_HINT_PRODUCT_INDUSTRY" />
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="@dimen/margin_right"
	                android:text="@string/TEXT_PROMOTION_CODE"
	                android:textColor="@color/BLACK" />
	
	            <Spinner
	                android:id="@+id/spCodeDisPro"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="10dip"
	                android:layout_weight="4.5"
	                android:background="@drawable/spinner_selector"
	                android:drawSelectorOnTop="true"
	                android:paddingBottom="@dimen/padding_bottom"
	                android:paddingLeft="@dimen/padding_left"
	                android:minWidth="100dip"
	                android:paddingRight="@dimen/padding_right"
	                android:paddingTop="@dimen/padding_top"
	                android:prompt="@string/TEXT_HINT_PRODUCT_INDUSTRY" />
				<TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="@dimen/margin_right"
	                android:text="@string/TEXT_STANDARD_RATE"
	                android:textColor="@color/BLACK" />
	            <TextView
	                android:id="@+id/tvStandardRate"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="10dip"
	                android:textColor="@color/BLACK"
	                android:textStyle="bold" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:background="@color/BG_FRAGMENT"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/llContentHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/TABLE_BG"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:paddingTop="2dip" >

                    <TextView
                        android:id="@+id/tvNVBH"
                        android:layout_width="550dip"
                        android:layout_height="fill_parent"
                        android:background="@color/TABLE_HEADER_BG"
                        android:gravity="center"
                        android:minHeight="@dimen/min_height_of_row"
                        android:padding="@dimen/padding"
                        android:text="@string/TEXT_HEADER_TABLE_NVBH"
                        android:textColor="@color/BLACK"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="200dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dip"
                            android:background="@color/TABLE_HEADER_BG"
                            android:gravity="center"
                            android:minHeight="@dimen/min_height_of_row"
                            android:padding="5dip"
                            android:text="@string/TEXT_NO_PSDS_JOIN"
                            android:textColor="@color/BLACK"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/lay"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/llLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >
                            </LinearLayout>

                            <TextView
                                android:layout_weight="2"
                                android:id="@+id/tvTotal"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dip"
                                android:layout_marginTop="2dip"
                                android:background="@color/TABLE_HEADER_BG"
                                android:gravity="center"
                                android:minHeight="@dimen/min_height_of_row"
                                android:minWidth="90dip"
                                android:padding="5dip"
                                android:text="@string/TEXT_HEADER_TABLE_RESULT_TOTAL"
                                android:textColor="@color/BLACK"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.viettel.dms.view.control.VinamilkTableView
                    android:id="@+id/tbCusList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </com.viettel.dms.view.control.VinamilkTableView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</ScrollView>
