<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TABLE_BG"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tvNPP"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:tag="@string/TEXT_LABLE_NPP"
        android:text="@string/TEXT_LABLE_NPP"
        android:textColor="@color/COLOR_USER_NAME" />

    <TextView
        android:id="@+id/tvGSBH"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:gravity="center_vertical|left"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:tag="@string/TEXT_HEADER_GSBH_REPORT"
        android:text="@string/TEXT_HEADER_GSBH_REPORT"
        android:textColor="@color/COLOR_USER_NAME" />

    <TextView
        android:id="@+id/tvTotalCustomer"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center_vertical|right"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:tag="@string/TEXT_TOTAL_KH"
        android:text="@string/TEXT_TOTAL_KH" />

    <TextView
        android:id="@+id/tvPSDSInMonth"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="right|center_vertical|center_horizontal"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right" 
        android:tag="@string/TEXT_CUS_PSDS_IN_MONTHS"
        android:text="@string/TEXT_CUS_PSDS_IN_MONTHS" />

    <TextView
        android:id="@+id/tvNoPSDS"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/COLOR_REMAIN"
        android:gravity="right|center_vertical|center_horizontal"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right" 
        android:tag="@string/REMAIN"
        android:text="@string/REMAIN" />

</LinearLayout>