<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mScrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/BG_FRAGMENT"
        android:orientation="vertical"
        android:padding="@dimen/padding_content_fragment" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@color/BG_FRAGMENT"
            android:gravity="right"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:paddingLeft="10dip"
                android:paddingRight="@dimen/padding_right"
                android:text="@string/LINE"
                android:textColor="@color/BLACK" >
            </TextView>

            <Spinner
                android:id="@+id/spTuyen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/margin_left"
                android:background="@drawable/spinner_selector"
                android:drawSelectorOnTop="true"
                android:prompt="@string/LINE" />
        </LinearLayout>

        <com.viettel.dms.view.control.VinamilkTableView
            android:id="@+id/tbCustomer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top" >
        </com.viettel.dms.view.control.VinamilkTableView>

        <TextView
            android:id="@+id/tvCacLanGheTham"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/margin_top"
            android:gravity="left"
            android:text="@string/TEXT_OF_VISITS_"
            android:textColor="@color/BLACK"
            android:textStyle="bold"
            android:visibility="invisible" >
        </TextView>

        <com.viettel.dms.view.control.VinamilkTableView
            android:id="@+id/tbCacLanGheTham"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top" >
        </com.viettel.dms.view.control.VinamilkTableView>

        <TextView
            android:id="@+id/tvMessageCacLanGheTham"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/margin_top"
            android:gravity="left"
            android:paddingBottom="10dip"
            android:text="@string/TEXT_CUSTOMER_NOT_VISITS_IN_MONTH"
            android:textColor="@color/BLACK" >
        </TextView>
    </LinearLayout>

</ScrollView>
