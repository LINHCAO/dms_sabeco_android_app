<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlTrainingDate"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/style_row_default" >

    <ImageView
        android:contentDescription="@string/TEXT_IMAGE_INFO"
        android:id="@+id/ivSupervisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:minHeight="35dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:text="2"
        android:textColor="@color/BLACK"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:minHeight="35dip"
        android:padding="5dip"
        android:text="Nguyen Quang Hieu"
        android:textColor="@color/BLACK"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvTipName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSupervisor"
        android:layout_margin="5dip"
        android:background="@drawable/bg_tip_none"
        android:gravity="center"
        android:minHeight="35dip"
        android:text="Nguyen Quang "
        android:textColor="@color/BLACK"
        android:textSize="13sp"
        android:visibility="gone" />

</RelativeLayout>