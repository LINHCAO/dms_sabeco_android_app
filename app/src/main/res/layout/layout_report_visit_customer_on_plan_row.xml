<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/TABLE_BG" >

    <TextView
        android:id="@+id/tvStaffCode"
        style="@style/TextViewVinamilkTable"
        android:layout_width="100dip"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:text="" />

    <TextView
        android:id="@+id/tvStaffName"
        style="@style/TextViewVinamilkTable"
        android:layout_width="200dip"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:minHeight="@dimen/min_height_of_row"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="" />

    <LinearLayout
        style="@style/TextViewVinamilkTable"
        android:layout_width="205dip"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_height_of_row"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivChecked"
            style="@style/ImageViewVinamilkTable"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:contentDescription="@string/TEXT_IMAGE_INFO"
            android:src="@drawable/icon_check" />

        <ImageView
            android:id="@+id/ivDeleted"
            style="@style/ImageViewVinamilkTable"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:contentDescription="@string/TEXT_IMAGE_INFO"
            android:src="@drawable/icon_delete_red" />

        <TextView
            android:id="@+id/tvCustomerInfo"
            style="@style/TextViewVinamilkTable"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/padding_left"
            android:gravity="center|left"
            android:minHeight="@dimen/min_height_of_row"
            android:text="KH"
            android:textColor="@color/COLOR_LINK" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMiddleInfo"
        style="@style/TextViewVinamilkTable"
        android:layout_width="105dip"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:text=""
        android:textColor="@color/COLOR_LINK" />

    <TextView
        android:id="@+id/tvEndInfo"
        style="@style/TextViewVinamilkTable"
        android:layout_width="105dip"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:text=""
        android:textColor="@color/COLOR_LINK" />

    <TextView
        android:id="@+id/tvCurrentInfo"
        style="@style/TextViewVinamilkTable"
        android:layout_width="105dip"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:text=""
        android:textColor="@color/COLOR_LINK" />

    <ImageView
        android:contentDescription="@string/TEXT_IMAGE_INFO"
        android:id="@+id/ivVisitCus"
        style="@style/ImageViewVinamilkTable"
        android:layout_width="60dp"
        android:minHeight="@dimen/min_height_of_row"
        android:src="@drawable/icon_map" />

</TableRow>
