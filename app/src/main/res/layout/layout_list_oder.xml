<?xml version="1.0" encoding="utf-8"?>
<!-- revision 30250 co filter ngay -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/BG_FRAGMENT"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/bg_header_info"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

                <!-- Nhan vien begin-->
                <TextView
                    android:id="@+id/tvKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="@string/TEXT_LABLE_CUSTOMER_INFO"
                    android:textColor="@color/BLACK"
                    android:visibility="gone">
                </TextView>

                <com.viettel.dms.view.control.VNMEditTextClearable
                    android:id="@+id/edMKH"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="0.4"
                    style="@style/VNMEditText"
                    android:layout_width="0dp"
                    android:hint="@string/TEXT_HINT_INPUT_CUSTOMER_ID"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:visibility="gone">
                </com.viettel.dms.view.control.VNMEditTextClearable>

                 <com.viettel.dms.view.control.VNMEditTextClearable
                    android:id="@+id/edTKH"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_weight="1"
                    android:hint="@string/TEXT_HINT_INPUT_CUSTOMER"
                    android:inputType="text"
                    android:singleLine="true"
                    style="@style/VNMEditText"
                    android:textSize="14sp"
                     android:visibility="gone">
                </com.viettel.dms.view.control.VNMEditTextClearable>
                <!-- Nhan vien end-->

                <!-- GSBH begin-->
                <TextView
                    android:id="@+id/tvGSNPP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingRight="@dimen/padding_right"
                    android:text="@string/TEXT_TITLE_GSNPP"
                    android:textColor="@color/BLACK"
                    android:visibility="gone">
                </TextView>

                <Spinner
                    android:id="@+id/spGSNPP"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/spinner_selector"
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/LINE"
                    android:spinnerMode="dropdown"
                    android:visibility="gone"/>
                <!-- GSBH end-->

                <!-- GSNPP begin-->
                <TextView
                    android:id="@+id/tvNVBH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingRight="@dimen/padding_right"
                    android:text="@string/TEXT_TITLE_NVBH"
                    android:textColor="@color/BLACK" >
                </TextView>

                <Spinner
                    android:id="@+id/spNVBH"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/spinner_selector"
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/LINE"
                    android:spinnerMode="dropdown" />
                <!-- GSNPP end-->
                
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="@string/TEXT_STATUS"
                    android:textColor="@color/BLACK" >
                </TextView>

                <Spinner
                    android:id="@+id/spinnerState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="5dip"
                    android:layout_weight="0.6"
                    android:background="@drawable/spinner_selector"
                    android:drawSelectorOnTop="true"
                    android:prompt="@string/STATE" />
				
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="@string/TEXT_ORDER_DATE"
                    android:textColor="@color/BLACK" >
                </TextView>
				<com.viettel.dms.view.control.VNMEditTextClearable
                    android:id="@+id/edTN"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="0.5"
                    android:hint="@string/TEXT_ORDER_DATE"
                    android:inputType="text"
                    android:singleLine="true"
                    style="@style/VNMEditText"
                    android:textSize="14sp" >
                </com.viettel.dms.view.control.VNMEditTextClearable>
                
                <Button
                    android:id="@+id/btSearch"
                    style="@style/VNMButton"
                	android:layout_width="wrap_content"
                	android:layout_height="@dimen/height_of_button"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_gravity="center_vertical"
                    android:text="@string/TEXT_BUTTON_FIND"/>
            
        </LinearLayout>

            <TextView
                android:id="@+id/tvNotChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/RED"
                android:textSize="16sp"
                android:gravity="bottom"
                android:layout_gravity="bottom"/>

        <com.viettel.dms.view.control.DMSTableView
            android:id="@+id/tbOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip" 
            android:layout_marginRight="10dip" 
            android:layout_marginBottom="10dip"  >
        </com.viettel.dms.view.control.DMSTableView>

    </LinearLayout>

</ScrollView>