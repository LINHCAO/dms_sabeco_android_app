<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="725dp"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical"
    android:padding="@dimen/padding" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btClosePopupPrograme"
            style="@style/VNMButton"
            android:layout_width="100dp"
            android:layout_height="@dimen/height_of_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_right"
            android:text="@string/TEXT_BUTTON_CLOSE"
            android:textColor="@color/BLACK" />

        <Button
            android:id="@+id/btResetChoosePrograme"
            style="@style/VNMButton"
            android:layout_width="100dp"
            android:layout_height="@dimen/height_of_button"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/btClosePopupPrograme"
            android:text="@string/TEXT_BUTTON_REMOVE_CHOOSE"
            android:textColor="@color/BLACK" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin"
            android:layout_toLeftOf="@id/btResetChoosePrograme"
            android:text="@string/TEXT_HEADER_CHOOSE_PROGRAME_FOR_PRODUCT"
            android:textColor="@color/BLACK"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:contentDescription="@string/TEXT_IMAGE_INFO"
        android:scaleType="fitXY"
        android:src="@drawable/line_dialog_long" />

    <ScrollView
        android:layout_width="705dp"
        android:layout_height="match_parent"
        android:background="@color/TRANSPARENT" >

        <LinearLayout
            android:layout_width="705dp"
            android:layout_height="wrap_content"
            android:background="@color/WHITE"
            android:orientation="vertical"
            android:padding="@dimen/padding" >

            <com.viettel.dms.view.control.VinamilkTableView
                android:id="@+id/tbProgrameListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin" >
            </com.viettel.dms.view.control.VinamilkTableView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>