<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="2dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvMHTT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/TABLE_HEADER_BG"
        android:gravity="center"
        android:padding="5dip"
        android:text="MHTT 1 (ĐVT: 1.000 VNĐ)"
        android:textColor="@color/BLACK"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Sodiemban"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:background="@color/TABLE_HEADER_BG"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/TEXT_HEADER_TABLE_PLAN"
            android:textColor="@color/BLACK"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Dungtuyen"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="2dip"
            android:background="@color/TABLE_HEADER_BG"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/TEXT_HEADER_TABLE_DONE"
            android:textColor="@color/BLACK"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="2dip"
            android:background="@color/TABLE_HEADER_BG"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/TEXT_HEADER_TABLE_PROGRESS"
            android:textColor="@color/BLACK"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRemain"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="2dip"
            android:background="@color/TABLE_HEADER_BG"
            android:gravity="center"
            android:padding="5dip"
            android:text="@string/TEXT_HEADER_TABLE_REMAIN"
            android:textColor="@color/BLACK"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>