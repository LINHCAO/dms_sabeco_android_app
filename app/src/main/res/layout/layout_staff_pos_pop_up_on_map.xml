<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:background="@drawable/popup_1"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dip"
                android:layout_weight="1.0"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:text="Cua "
                android:textColor="@color/RED"
                android:textSize="18sp"
                android:textStyle="bold" >
            </TextView>

            <ImageView
                android:contentDescription="@string/TEXT_IMAGE_INFO"
                android:id="@+id/ivDelete"
                android:layout_marginLeft="5dip"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_close" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContent2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCellPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dp"
                android:text="Di động : 0987578272"
                android:textColor="@color/BLACK" >
            </TextView>
            
             <TextView
                android:id="@+id/tvUpdateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dp"
                android:text="Cap nhat luc : 9:00"
                android:textColor="@color/BLACK" >
            </TextView>
            
             <TextView
                android:id="@+id/tvVisiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dp"
                android:text="Dang ghe tham : A1: Chi Dung"
                android:textColor="@color/BLACK" >
            </TextView>

            <ImageView
                android:contentDescription="@string/TEXT_IMAGE_INFO"
                android:id="@+id/seperator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:scaleType="fitXY"
                android:src="@drawable/seperator" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_gravity="left"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1.0"
                android:drawableLeft="@drawable/icon_direction"
                android:drawablePadding="2dip"
                android:gravity="center_vertical"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:text="@string/TEXT_VIEW_ROUTE"
                android:textColor="@color/BLUE" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:contentDescription="@string/TEXT_IMAGE_INFO"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llContent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-10dip"
        android:paddingBottom="10dp"
        android:src="@drawable/popup_2" >
    </ImageView>

</RelativeLayout>