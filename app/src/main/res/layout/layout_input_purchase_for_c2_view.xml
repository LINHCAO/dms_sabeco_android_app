<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dip"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="790dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@drawable/bg_white_rounded"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/TEXT_INPUT_PURCHASE_FOR_CUSTOMER_OF_C2"
            android:textColor="@color/BLACK"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:contentDescription="@string/TEXT_IMAGE_INFO"
            android:scaleType="fitXY"
            android:src="@drawable/seperator" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="10dip"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:text="@string/TEXT_BUY_FROM"
                android:textColor="@color/BLACK" >
            </TextView>

            <com.viettel.dms.view.control.VNMEditTextClearable
                android:id="@+id/etSourceName"
                style="@style/VNMEditText"
                android:layout_width="420dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:inputType="none"
                android:maxLength="250"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textSize="14sp" >
            </com.viettel.dms.view.control.VNMEditTextClearable>

            <TextView
                android:layout_width="40dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:text="@string/TEXT_HEADER_MENU_REPORT_DATE"
                android:textColor="@color/BLACK" >
            </TextView>

            <com.viettel.dms.view.control.VNMEditTextClearable
                android:id="@+id/etOrderDate"
                style="@style/VNMEditText"
                android:layout_width="140dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:focusable="false"
                android:inputType="none"
                android:maxLength="10"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textSize="14sp" >
            </com.viettel.dms.view.control.VNMEditTextClearable>
        </LinearLayout>

        <com.viettel.dms.view.control.VinamilkTableView
            android:id="@+id/tbCusList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip" >
        </com.viettel.dms.view.control.VinamilkTableView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="@string/TEXT_NOTE_INPUT_PURCHASE_FOR_C2"
            android:textColor="@color/TITLE_LIGHT_BLACK_COLOR"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:gravity="center" >

            <Button
                android:id="@+id/btSave"
                style="@style/VNMButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dip"
                android:src="@drawable/icon_search"
                android:text="@string/TEXT_SAVE" />

            <Button
                android:id="@+id/btClose"
                style="@style/VNMButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dip"
                android:contentDescription="@string/TEXT_IMAGE_INFO"
                android:src="@drawable/icon_search"
                android:text="@string/TEXT_BUTTON_CLOSE" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>