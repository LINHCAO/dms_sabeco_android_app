<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/TABLE_BG">

    <TextView
        android:id="@+id/tvSTT"
        style="@style/TextViewVinamilkTable"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:text="@string/TEXT_STT"
        android:textColor="@color/BLACK" />

    <LinearLayout
        android:id="@+id/llProductCode"
        style="@style/TextViewVinamilkTable"
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:minHeight="@dimen/min_height_of_row"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMMH"
            style="@style/TextViewVinamilkTable"
            android:layout_width="180dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:minHeight="@dimen/min_height_of_row"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="2dp"
            android:paddingTop="@dimen/padding_top"
            android:text="@string/TEXT_COLUM_ORDER_CODE"
            android:textColor="@color/BLACK" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEditText"
        style="@style/TextViewVinamilkTable"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:minHeight="@dimen/min_height_of_row"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNumber"
            style="@style/VNMEditText"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="7"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvNumber"
            style="@style/TextViewVinamilkTable"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content" />
    </LinearLayout>


</TableRow>