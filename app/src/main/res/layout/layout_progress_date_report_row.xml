<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/TABLE_BG"
    android:minHeight="35dip" >

    <TextView
        android:id="@+id/tvMaNvbh"
        style="@style/TextViewVinamilkTable"
        android:layout_width="110dip"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="5dip"
        android:text="@string/TEXT_HEADER_TABLE_NVBH_CODE"
        android:textColor="@color/COLOR_USER_NAME" />

    <TextView
        android:id="@+id/tvNvbh"
        style="@style/TextViewVinamilkTable"
        android:layout_width="160dip"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dip"
        android:text="@string/TEXT_NVBH" />

    <TextView
        android:id="@+id/tvKh"
        style="@style/TextViewVinamilkTable"
        android:layout_width="97dip"
        android:layout_height="fill_parent"
        android:gravity="center|center_vertical" />

    <TextView
        android:id="@+id/tvTh"
        style="@style/TextViewVinamilkTable"
        android:layout_width="95dip"
        android:layout_height="fill_parent"
        android:gravity="center|center_vertical" />

    <TextView
        android:id="@+id/tvKeHoach"
        style="@style/TextViewVinamilkTable"
        android:layout_width="97dip"
        android:layout_height="fill_parent"
        android:gravity="right|center_vertical"
        android:paddingRight="10dip" />

    <TextView
        android:id="@+id/tvThucHien"
        style="@style/TextViewVinamilkTable"
        android:layout_width="97dip"
        android:layout_height="fill_parent"
        android:gravity="right|center_vertical"
        android:paddingRight="10dip" />

    <TextView
        android:id="@+id/tvConLai"
        style="@style/TextViewVinamilkTable"
        android:layout_width="93dip"
        android:layout_height="fill_parent"
        android:background="#d9d9ff"
        android:gravity="right|center_vertical"
        android:paddingRight="10dip" />

   <TextView
        android:id="@+id/tvDiem"
        style="@style/TextViewVinamilkTable"
        android:layout_width="65dip"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="14" />

    <TextView
        android:id="@+id/tvDoanhSoKeHoachTuyen"
        style="@style/TextViewVinamilkTable"
        android:layout_width="85dip"
        android:layout_height="fill_parent"
        android:paddingRight="5dip"
        android:gravity="center"
        android:text="" />

    <ImageButton
        android:id="@+id/ibDetail"
        style="@style/ImageViewVinamilkTable"
        android:layout_width="45dip"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/TEXT_IMAGE_INFO"
        android:padding="@dimen/padding"
        android:scaleType="centerInside"
        android:src="@drawable/icon_list_item"
        android:visibility="visible" />
<TextView
        android:id="@+id/tvNotifyNull"
        style="@style/TextViewVinamilkTable"
        android:layout_width="963dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:textColor="@color/BLACK"
        android:visibility="gone" />
</TableRow>