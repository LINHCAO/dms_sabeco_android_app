<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TABLE_BG"
    android:gravity="center_vertical" >

    <TextView
        android:id="@+id/tvSTT"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:minHeight="@dimen/min_height_of_row"
        android:tag="@string/TEXT_STT"
        android:text="@string/TEXT_STT" />

    <TextView
        android:id="@+id/tvTKH"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left|center_vertical"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:tag="@string/TEXT_ORDER_CUSTOMER"
        android:text="@string/TEXT_ORDER_CUSTOMER"
        android:textColor="@color/COLOR_USER_NAME" />

    <TextView
        android:id="@+id/tvDiaChi"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="left|center_vertical"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:tag="@string/TEXT_ADDRESS"
        android:text="@string/TEXT_ADDRESS" />

    <TextView
        android:id="@+id/tvDienThoai"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="left|center_vertical"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:tag="@string/TEXT_PHONE"
        android:text="@string/TEXT_PHONE" />

    <TextView
        android:id="@+id/tvTrangThai"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="left|center"
        android:minHeight="@dimen/min_height_of_row"
        android:padding="@dimen/padding"
        android:tag="@string/STATE"
        android:text="@string/STATE" />

    <ImageView
        android:id="@+id/ivXoa"
        style="@style/TextViewVinamilkTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/TEXT_IMAGE_INFO"
        android:padding="@dimen/padding"
        android:scaleType="centerInside"
        android:src="@drawable/icon_delete" />

</LinearLayout>