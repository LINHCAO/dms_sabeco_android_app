<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/TRANSPARENT"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:background="@drawable/bg_header_info"
        android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTitelCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingRight="@dimen/padding_right"
                    android:text="@string/TEXT_PHOTO_CUSTOMER_NAME"
                    android:textColor="@color/BLACK"
                    android:textSize="18sp" >

                </TextView>

                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingRight="@dimen/padding_right"
                    android:text="@string/TEXT_TB_CUSTOMER_NAME"
                    android:textColor="@color/BLACK"
                    android:textSize="18sp"
                    android:textStyle="bold" >

                </TextView>

                <TextView
                    android:id="@+id/tvTitelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingRight="@dimen/padding_right"
                    android:text="@string/TEXT_CUSTOMER_ADDRESS"
                    android:textColor="@color/BLACK"
                    android:textSize="18sp" >

                </TextView>

                <TextView
                    android:id="@+id/tvCustomerAddress"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:gravity="left"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingRight="@dimen/padding_right"
                    android:text="@string/TEXT_ADDRESS"
                    android:textColor="@color/BLACK"
                    android:textSize="18sp"
                    android:textStyle="bold" >

                </TextView>

                <Button
                    android:id="@+id/btReset"
                    style="@style/VNMButton"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/height_of_button"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:text="@string/TEXT_DELETE_LOCATION"
                    android:textColor="@color/BLACK" />
    </LinearLayout>

    <com.viettel.dms.view.control.SpinerRoute
        android:id="@+id/spHistoryUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >
    </com.viettel.dms.view.control.SpinerRoute>

